import cv2
import numpy as np
import matplotlib.pyplot as plt
def imgshow(img, rows=1, columns=3):
    img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    img_gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
    fig = plt.figure(figsize=(15, 8))
    fig.add_subplot(rows, columns, 1)
    plt.title('BGR Format')
    plt.imshow(img)
    fig.add_subplot(rows, columns, 2)
    plt.title('RGB Format')
    plt.imshow(img_rgb)
    fig.add_subplot(rows, columns, 3)
    plt.title('Grayscale')
    plt.imshow(img_gray, cmap='gray')
    kernel = np.ones((5, 5), np.uint8)
    img_erosion = cv2.erode(img_gray, kernel, iterations=1)
    fig.add_subplot(rows, columns, 4)
    plt.title('Erosion')
    plt.imshow(img_erosion, cmap='gray')
    img_dilation = cv2.dilate(img_gray, kernel, iterations=1)
    fig.add_subplot(rows, columns, 5)
    plt.title('Dilation')
    plt.imshow(img_dilation, cmap='gray')
    plt.tight_layout()
    plt.show()
image_path = 'exp_DL.jpg'
img = cv2.imread(image_path)
imgshow(img, rows=1, columns=5)
